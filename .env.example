# Memorizer Configuration
# Copy this file to .env and adjust values as needed

# Application
MEMORIZER_APP_NAME=Memorizer
MEMORIZER_APP_VERSION=2.0.0
MEMORIZER_ENVIRONMENT=production

# Server
MEMORIZER_API_HOST=0.0.0.0
MEMORIZER_API_PORT=8000
MEMORIZER_STREAMLIT_PORT=8501
MEMORIZER_CANONICAL_URL=http://localhost:8000

# Storage
MEMORIZER_DATA_DIR=./data
MEMORIZER_CHROMA_DIR=./data/chroma
MEMORIZER_MODELS_DIR=./models

# Embeddings (pre-bundled in Docker)
MEMORIZER_EMBEDDING_MODEL=all-MiniLM-L6-v2
MEMORIZER_EMBEDDING_DIMENSION=384

# LLM (optional - download model separately)
MEMORIZER_LLM_MODEL_PATH=./models/tinyllama-1.1b-chat-v1.0.Q4_K_M.gguf
MEMORIZER_LLM_CONTEXT_SIZE=2048
MEMORIZER_LLM_MAX_TOKENS=256
MEMORIZER_LLM_TEMPERATURE=0.7
MEMORIZER_LLM_TIMEOUT=120

# Search
MEMORIZER_SEARCH_LIMIT=10
MEMORIZER_SEARCH_MAX_LIMIT=100
MEMORIZER_SIMILARITY_THRESHOLD=0.7
MEMORIZER_FALLBACK_THRESHOLD=0.6
MEMORIZER_TAG_BOOST=0.05

# Background Jobs
MEMORIZER_ENABLE_BACKGROUND_JOBS=true
MEMORIZER_TITLE_GENERATION_BATCH_SIZE=10

# CORS
MEMORIZER_CORS_ORIGINS=["*"]
MEMORIZER_CORS_METHODS=["*"]
MEMORIZER_CORS_HEADERS=["*"]

# Suppress Warnings (Optional)
# Disable ChromaDB telemetry warnings
CHROMA_TELEMETRY_IMPL=none

# Disable PyTorch Metal warnings (macOS only)
PYTORCH_ENABLE_MPS_FALLBACK=1

# Python logging level (INFO, WARNING, ERROR)
PYTHONLOGLEVEL=INFO
